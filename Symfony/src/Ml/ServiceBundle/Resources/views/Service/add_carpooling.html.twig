							{{ form_label(form.pets) }}
							{{ form_errors(form.pets) }}
							{{ form_widget(form.pets) }}<br><br>
							{{ form_label(form.music) }}
							{{ form_errors(form.music) }}
							{{ form_widget(form.music) }}<br><br>
							{{ form_label(form.associatedGroup) }}
							{{ form_errors(form.associatedGroup) }}
							{{ form_widget(form.associatedGroup) }}<br><br>
							<button id="form_validatation" class="btn btn-primary btn-xs" type="submit">Créer <i class="icon-white glyphicon glyphicon-ok-sign"></i> </button>
						</form>
					</div>
				</td>
			</tr>
		</table>
	{% endif %}

{% endblock %}